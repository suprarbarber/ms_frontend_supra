<link rel="stylesheet" href="./css/calendario.css">

<!-- Calendario  -->
<div class="calendario container-fluid py-2 px-3">
    <div class="row calendario-header">
        <!-- Botón mes anterior -->
        <div class="col-2 btn center">
            <span id="prev" class="btn-prev"><</span>
        </div>

        <!-- Mes actual -->
        <div class="col-3 center">
            <h2 class="mes"></h2>
        </div>

        <!-- Botón mes siguiente -->
        <div class="col-2 btn center">
            <span id="next" class="btn-next">></span>
        </div>

        <!-- Año actual -->
        <div class="col-5 text-end">
            <h1 class="ano"></h1>
        </div>
    </div>

    <div class="row dias text-center">
        <ul class="semana">
            <li>D</li>
            <li>L</li>
            <li>M</li>
            <li>M</li>
            <li>J</li>
            <li>V</li>
            <li>S</li>
        </ul>

        <ul class="num-dias">
        </ul>
    </div>
</div>

<script src="./js/calendario.js"></script>
