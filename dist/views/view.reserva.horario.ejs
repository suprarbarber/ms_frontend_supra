<%- include('partials/headerhtml') %>
    
    <link rel="stylesheet" href="./css/horario.css" />
    <title>Reserva Servicios</title>
</head>

<body>
  <div class="main-container d-flex">
    <!-- barra lateral  -->
     <%- include('partials/sidebar') %>
     
    <div class="content">

        <!-- barra de navegacion superior  -->
        <%- include('partials/navbar.reserva.ejs') %>
        <!-- fin barra superior  -->

        <!-- contenido de la pagina  -->
        <div class="container" id="content">

            <div class="row">
                <div class="col-12 mt-2" id="liveAlertPlaceholder"></div>
            </div>

            <div class="row">
                <!-- Calendario  -->
                <div class="col-md-7 col-lg-7 col-sm-12 center">
                    <%- include('partials/calendario.ejs') %>
                </div>
                
                <!-- turnos -->
                <div class="col-md-4 col-lg-4 col-sm-12 turnos">

                    <div class="conatiner-fluid cuadro2 d-flex flex-column">

                        <div class="row txt-title d-flex aling-items-center ps-2">
                            Turnos
                        </div>
                        
                        <div class="row">
                            <div class="col-12d-flex flex-column ps-2" id="turnos">
                                <% datos.forEach(element => { %>
                                    <button id="<%= element.id_registro_horario %>" onclick="turno(this)" type="button" class="btn btn-secondary border-0 text-dark btn-turno"><%= element.hora_inicial %></button>
                                <% }); %>
                            </div>
                            <div class="col-12">
                                <div class="col-12" id="liveAlertPlaceholder"></div>
                            </div>
                        </div>

                        <!-- Boton finalizar  -->
                        <div class="row">           
                            <div class="col-12 mt-4">
                                <button onclick="finalizar()" class="btn btn-danger" id="btn-finalizar">
                                    Finalizar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
            
    </div>
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="./js/script.barra.lateral.js"></script>
    <!-- sweetalert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- alertify  -->
    <script src="./plugins/alertifyjs/alertify.min.js"></script>

    <script src="../js/reserva.horario.js"></script>


</body>
</html>