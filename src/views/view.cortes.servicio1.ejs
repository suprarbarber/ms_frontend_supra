<%- include('partials/headerhtml') %>
    
    <link rel="stylesheet" href="./css/corte.cliente.css" />
    <title>Cortes</title>
</head>

<body>
  <div class="main-container d-flex">
    <!-- barra lateral  -->
     <%- include('partials/sidebar') %>
     
    <div class="content">

        <!-- barra de navegacion superior  -->
        <%- include('partials/navbar.ejs') %>
        <!-- fin barra superior  -->

        <!-- contenido de la pagina  -->
        <div class="container-fluid center" id="content">
            <div class="row">
                <div class="col-12 mt-2 mb-3">
                    <!-- barra de busqueda  -->
                    <nav class="navbar text-center my-5 p-0 center">
            
                        <form class="d-flex center" role="search" style="width: 80%;">
            
                            <input class="form-control" type="search" placeholder="Buscar" aria-label="Search">
                        </form>
                    </nav>
                </div>

                <div class="col-md-12 " id="cuerpo">
                    <% datos.forEach(element => { %>
                        <a class="btn text-light text-center mx-2 my-2" id="corte">
                            <!-- imagen del corte  -->
                            <img class="mt-2" src="img/foto vacia.png" width="90" height="95" class="rounded">
                            <!-- descripcion del corte  -->
                            <h3 class="nombre fs-4 mt-2"><%= element.nombre %></h3>
                        </a>
                    <% }); %>
                </div>
            </div>
        </div>
            
    </div>
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="./js/script.barra.lateral.js"></script>
    <script src="./js/corte.js"></script>
</body>
</html>