<%- include('partials/headerhtml') %>
    
    <link rel="stylesheet" href="./css/producto.cliente.css" />
    <title>Productos</title>
</head>

<body>
  <div class="main-container d-flex">
    <!-- barra lateral  -->
     <%- include('partials/sidebar') %>
     
    <div class="content">

        <!-- barra de navegacion superior  -->
        <%- include('partials/navbar.ejs') %>
        <!-- fin barra superior  -->

        <!-- contenido de la pagina  -->
        <div class="container-fluid">
             <div class="row">
                <!-- barra de busqueda  -->
                <nav class="navbar text-center my-5 p-0 center">
        
                    <form class="d-flex center" role="search" style="width: 80%;">
        
                        <input class="form-control" type="search" placeholder="Buscar" aria-label="Search">
                    </form>
                </nav>
            </div>
            <!-- contenedor productos  -->
            <div class="row p-3">
                <div class="col-12 d-flex flex-wrap justify-content-center" id="contenedorscrol">
                    
                    <% datos.forEach(element => { %>
                        <div class="card text-center my-4 mx-2" id="tarjeta" style="width: 250px;">
                            <!-- imagen  -->
                            <img src="img/producto.png" class="card-img-top" height="150px" alt="...">
                            <!-- cuerpo  -->
                            <div class="card-body">
                              <h5 class="card-title"><%= element.nombre %></h5>
                              <p class="card-text"><%= element.descripcion %> </p>
                              <!-- boton -->
                              <a href="#" class="btn btn-primary" id="btn-agregar" onclick="alerta(event)">Agregar al carrito</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
            <div class="row bg-info mt-3" style="position: relative;">
                <div class="col-8">
                    <button class="btn btn-success" style="height: 50px; position: absolute; right: 25px;">
                        <i class="bi bi-cart-check-fill"></i>
                        Ir al carrito
                    </button>
                </div>
            </div>

        </div>
            
    </div>
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="./js/script.barra.lateral.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../js/productos.cliente.js"></script>


</body>
</html>