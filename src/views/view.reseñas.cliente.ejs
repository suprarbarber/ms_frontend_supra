<%- include('partials/headerhtml') %>
    
    <link rel="stylesheet" href="./css/reseñas.cliente.css" />
    <title>Reseñas</title>
</head>

<body>
  <div class="main-container d-flex">
    <!-- barra lateral  -->
     <%- include('partials/sidebar') %>
     
    <div class="content">

        <!-- barra de navegacion superior  -->
        <%- include('partials/navbar.ejs') %>
        <!-- fin barra superior  -->

        <!-- contenido de la pagina  -->
        <div class="container-fluid text-center" id="content">
            <input type="hidden" value="<%= JSON.stringify(datos) %>" id="bdDatos">
            <div class="row pt-3 mb-3" style="height: 530px; overflow: auto;">
                <!-- comentarios  -->
                <div class="col-md-6 col-lg-6 comentarios">
                </div>
            </div>
            <div class="row">
                <div class="input-group mb-3">
                    <input type="text" id="miComentario" class="form-control" placeholder="Ingresa un comentario" aria-describedby="button-addon2">
                    <button onclick="enviarComentario(event)" class="btn btn-outline-secondary" type="submit" id="button-enviar">Enviar<i class="bi bi-send ms-2"></i></button>
                </div>
            </div>
        </div>
            
    </div>
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="./js/script.barra.lateral.js"></script>
    <script src="./js/reseñas.js"></script>
</body>
</html>